<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools" >

    <ImageView
        android:id="@+id/tournament_icon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:padding="@dimen/padding_regular"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/article_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_regular"
        android:layout_toRightOf="@id/tournament_icon_image"
        android:layout_toEndOf="@id/tournament_icon_image"
        android:text="@string/article_title"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/article_subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tournament_icon_image"
        android:layout_toEndOf="@id/tournament_icon_image"
        android:layout_below="@id/article_heading"
        android:padding="@dimen/padding_regular"
        android:text="@string/article_subtitle"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <Button
        android:id="@+id/open_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tournament_icon_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="18dp"
        android:layout_toStartOf="@+id/article_heading"
        android:text="@string/open" />


    <FrameLayout
        android:id="@+id/fragment_container"
        android:name="SimpleFragment"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tournament_icon_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="184dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_feedback" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/event_list"
        android:name="com.example.android.songs.SongListFragment"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_subheading"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="@dimen/standard_margin"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.example.android.songdetailstart.MainActivity"
        tools:listitem="@layout/event_list_content" />

</RelativeLayout>